{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",  // Change this to match your app module system
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "jsx": "react-jsx",  // Keep JSX support for React
      "strict": true,
      "moduleResolution": "node",  // Use Node module resolution
      "allowJs": true,
      "isolatedModules": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.test.tsx", "src/**/*.test.ts"] // Include test files explicitly
  }
  