{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",  // Keep this as "esnext" for Next.js
    "moduleResolution": "node",  // Change to "node" for compatibility with Jest
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",  // Change to "react-jsx" to better support JSX in React projects
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
